@page "/albums"
@attribute [StreamRendering]
@rendermode InteractiveServer
@using Samples.MusicCollection.Web.Albums;

<PageTitle>Albums</PageTitle>

<h1>Albums</h1>

<RadzenDataGrid @ref=_dataGrid Data="@Albums" AllowSorting="true" AllowFiltering="true" AllowPaging="true" PageSize="10" PagerHorizontalAlign="HorizontalAlign.Center" ColumnWidth="200px">
    <Columns>
        <RadzenDataGridColumn Property="@nameof(Album.AlbumId)" Filterable="false" Title="ID" Frozen="true" Width="80px" TextAlign="TextAlign.Center" />
        <RadzenDataGridColumn Property="@nameof(Album.Name)" Width="*" Title="Name" SortOrder="SortOrder.Ascending" />
        <RadzenDataGridColumn Property="@nameof(Album.ReleaseDate)" Title="Release Date" Width="300px" FormatString="{0:dd MMM yyyy}" />
    </Columns>
</RadzenDataGrid>