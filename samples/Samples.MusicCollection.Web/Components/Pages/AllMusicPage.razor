@page "/allmusic"
@attribute [StreamRendering]
@rendermode InteractiveServer
@using Samples.MusicCollection.Web.Models
@using Samples.MusicCollection.Web.AllMusic

<PageTitle>All Music</PageTitle>

<RadzenRow JustifyContent="JustifyContent.Center">
    <RadzenDataList Data="@AllMusicHandler.Artists" TItem="ArtistDetail"
                    Style="overflow:auto; max-width:820px;" WrapItems="true"
                    AllowPaging="true" PageSize="10"
                    PagerHorizontalAlign="HorizontalAlign.Left" ShowPagingSummary="true">
        <Template Context="ArtistDetail">
            <RadzenCard class="rz-shadow-0 rz-border-radius-0 rz-p-8 rz-mx-1" style="width:400px;">
                <RadzenStack Gap="0" Orientation="Orientation.Horizontal">
                    <RadzenStack>
                        <RadzenImage Style="width: 100px; height: 100px; border-radius: 50%;">

                        </RadzenImage>
                        <RadzenRow>
                            <RadzenUpload Name="file" Icon="upload" ChooseText="" Accept="image/*"
                                          InputAttributes="@(new Dictionary<string,object>(){ { "aria-label", "select file" }})"
                                          Url="api/AllMusic/Images/Artists" Multiple="false" AutoUpload="true" />
                            <RadzenButton Icon="delete" />
                        </RadzenRow>
                    </RadzenStack>

                    <RadzenText TextStyle="TextStyle.Body1"><b>@ArtistDetail.Name</b></RadzenText>
                </RadzenStack>
            </RadzenCard>
        </Template>
    </RadzenDataList>
</RadzenRow>