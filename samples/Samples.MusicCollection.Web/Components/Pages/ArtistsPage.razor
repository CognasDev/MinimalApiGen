@page "/artists"
@attribute [StreamRendering]
@rendermode InteractiveServer
@using Samples.MusicCollection.Web.Models

<PageTitle>Artists</PageTitle>

<h1>Artists</h1>

<RadzenDataGrid @ref=_dataGrid Data="@Artists" AllowSorting="true" AllowFiltering="true" AllowPaging="true" PageSize="10" PagerHorizontalAlign="HorizontalAlign.Center" ColumnWidth="200px">
    <Columns>
        <RadzenDataGridColumn Property="@nameof(Artist.ArtistId)" Filterable="false" Title="ID" Frozen="true" Width="80px" TextAlign="TextAlign.Center" />
        <RadzenDataGridColumn Property="@nameof(Artist.Name)" Width="*" Title="Name" SortOrder="SortOrder.Ascending" />
    </Columns>
</RadzenDataGrid>